@model EmployeeDto
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 text-danger">
                <i class="fas fa-exclamation-triangle"></i> Delete Employee
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Employees</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-circle"></i> Are you sure you want to delete this employee?
        </h4>
        <p>This action cannot be undone. All employee information will be permanently deleted.</p>
    </div>

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Employee Information to Delete</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Document</dt>
                <dd class="col-sm-9">@Model.Document</dd>

                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.DepartmentName</dd>

                <dt class="col-sm-3">Job Position</dt>
                <dd class="col-sm-9">@Model.JobPositionName</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Status == "Active")
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else if (Model.Status == "Vacation")
                    {
                        <span class="badge bg-info">Vacation</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>

                <dt class="col-sm-3">Hiring Date</dt>
                <dd class="col-sm-9">@Model.HiringDate.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="fas fa-trash"></i> Yes, Delete Employee
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-times"></i> Cancel
        </a>
    </div>
</div>

