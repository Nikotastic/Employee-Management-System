@model EmployeeDto
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">
                <i class="fas fa-user"></i> Detalles del Empleado
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Empleados</a></li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-id-card"></i> Información Personal
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Documento:</strong>
                            <p>@Model.Document</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha de Nacimiento:</strong>
                            <p>@Model.BirthDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Nombres:</strong>
                            <p>@Model.FirstName</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Apellidos:</strong>
                            <p>@Model.LastName</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>Dirección:</strong>
                            <p>@Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-envelope"></i> Información de Contacto
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Correo Electrónico:</strong>
                            <p><a href="mailto:@Model.Email">@Model.Email</a></p>
                        </div>
                        <div class="col-md-6">
                            <strong>Teléfono:</strong>
                            <p><a href="tel:@Model.Phone">@Model.Phone</a></p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-briefcase"></i> Información Laboral
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Departamento:</strong>
                            <p>@Model.DepartmentName</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Cargo:</strong>
                            <p>@Model.JobPositionName</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Salario:</strong>
                            <p>@Model.Salary.ToString("C0")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha de Contratación:</strong>
                            <p>@Model.HiringDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Estado:</strong>
                            <p>
                                @if (Model.Status == "Active")
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else if (Model.Status == "Vacation")
                                {
                                    <span class="badge bg-info">Vacaciones</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">
                        <i class="fas fa-graduation-cap"></i> Información Académica
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Nivel Educativo:</strong>
                            <p>@Model.EducationLevel</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>Perfil Profesional:</strong>
                            <p>@(string.IsNullOrWhiteSpace(Model.ProfessionalProfile) ? "No especificado" : Model.ProfessionalProfile)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar Empleado
                        </a>
                        <a asp-action="DownloadCV" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-file-pdf"></i> Descargar Hoja de Vida
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Eliminar Empleado
                        </a>
                        <hr>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver al Listado
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Información Adicional
                    </h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        <strong>ID:</strong> @Model.Id<br>
                        <strong>Registro:</strong> @Model.HiringDate.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

