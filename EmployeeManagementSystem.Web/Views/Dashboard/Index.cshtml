@model EmployeeManagementSystem.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0">Dashboard - TalentoPlus S.A.S</h1>
            <p class="text-muted">General summary of the employee management system</p>
        </div>
    </div>

    <!-- Metric cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Employees
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Active Employees
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                On Vacation
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OnVacationEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-umbrella-beach fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Inactive
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.InactiveEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-times fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow" style="height: 500px;">
                <div class="card-header py-3 bg-gradient-primary text-white d-flex align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-robot mr-2"></i> TalentoPlus AI Assistant
                    </h6>
                    <span class="badge bg-light text-primary">Beta</span>
                </div>
                <div class="card-body d-flex flex-column p-0">
                    <!-- Chat History -->
                    <div id="chatHistory" class="flex-grow-1 p-3" style="overflow-y: auto; background-color: #f8f9fa;">
                        <!-- Welcome Message -->
                        <div class="d-flex flex-row align-items-start mb-3">
                            <div class="p-2 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="fas fa-robot"></i>
                            </div>
                            <div class="ml-2 p-3 bg-white rounded shadow-sm text-dark" style="max-width: 75%; border-top-left-radius: 0;">
                                <p class="mb-0">Hello! I am your AI assistant. How can I help you with employee data today?</p>
                            </div>
                        </div>
                    </div>

                    <!-- Input Area -->
                    <div class="p-3 bg-white border-top">
                        <div id="aiLoading" class="text-center mb-2" style="display:none;">
                            <small class="text-muted"><i class="fas fa-circle-notch fa-spin"></i> Typing...</small>
                        </div>
                        <div class="input-group">
                            <input type="text" id="aiQuery" class="form-control border-0 bg-light" 
                                   placeholder="Type your question here (e.g. 'How many active employees?')..." 
                                   style="border-radius: 20px 0 0 20px; padding-left: 20px;">
                            <button class="btn btn-primary px-4" type="button" id="askAIBtn" style="border-radius: 0 20px 20px 0;">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent employees -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recently Registered Employees</h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentEmployees.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Document</th> 
                                        <th>Name</th> 
                                        <th>Position</th> 
                                        <th>Department</th> 
                                        <th>Entry Date</th> 
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var emp in Model.RecentEmployees)
                                    {
                                        <tr>
                                            <td>@emp.Document</td>
                                            <td>@emp.FirstName @emp.LastName</td>
                                            <td>@emp.JobPositionName</td>
                                            <td>@emp.DepartmentName</td>
                                            <td>@emp.HiringDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge @(emp.Status == "Active" ? "bg-success" : emp.Status == "Vacation" ? "bg-info" : "bg-secondary")">
                                                    @emp.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">There are no registered employees</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const chatHistory = document.getElementById('chatHistory');
    const aiQueryInput = document.getElementById('aiQuery');
    const askAIBtn = document.getElementById('askAIBtn');
    const aiLoading = document.getElementById('aiLoading');

    function appendMessage(isUser, text) {
        const messageDiv = document.createElement('div');
        messageDiv.className = `d-flex flex-row align-items-start mb-3 ${isUser ? 'justify-content-end' : ''}`;

        let avatar = '';
        let bubbleClass = '';
        
        if (isUser) {
            // User: Avatar Right, Bubble Blue
            avatar = `
                <div class="ml-2 p-2 bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <i class="fas fa-user"></i>
                </div>`;
            bubbleClass = 'bg-primary text-white';
        } else {
            // AI: Avatar Left, Bubble White
            avatar = `
                <div class="mr-2 p-2 bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; margin-right: 0.5rem;">
                    <i class="fas fa-robot"></i>
                </div>`;
            bubbleClass = 'bg-white text-dark shadow-sm border';
        }

        const bubbleStyle = isUser ? 'border-top-right-radius: 0;' : 'border-top-left-radius: 0;';
        
        const bubble = `
            <div class="p-3 rounded ${bubbleClass}" style="max-width: 75%; ${bubbleStyle}">
                <p class="mb-0 text-break" style="white-space: pre-wrap;">${text}</p>
            </div>
        `;

        messageDiv.innerHTML = isUser ? bubble + avatar : avatar + bubble;
        chatHistory.appendChild(messageDiv);
        chatHistory.scrollTop = chatHistory.scrollHeight; // Auto scroll
    }

    askAIBtn.addEventListener('click', async function() {
        const query = aiQueryInput.value.trim();
        
        if (!query) return;

        // 1. Show User Message
        appendMessage(true, query);
        aiQueryInput.value = '';
        askAIBtn.disabled = true;

        // 2. Show Loading
        aiLoading.style.display = 'block';
        chatHistory.scrollTop = chatHistory.scrollHeight;

        try {
            const response = await fetch('/Dashboard/AskAI', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ query: query })
            });

            const data = await response.json();

            // 3. Hide Loading
            aiLoading.style.display = 'none';
            askAIBtn.disabled = false;

            if (response.ok) {
                // 4. Show AI Response
                appendMessage(false, data.response);
            } else {
                appendMessage(false, '❌ Error: ' + (data.error || 'Unknown error'));
            }
        } catch (error) {
            aiLoading.style.display = 'none';
            askAIBtn.disabled = false;
            appendMessage(false, '⚠️ Connection Error: ' + error.message);
        }
    });

    // Send with Enter
    aiQueryInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            askAIBtn.click();
        }
    });
</script>
}

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
</style>

